<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openSecondImplicitBtn"
        android:layout_width="368dp"
        android:layout_height="95dp"
        android:layout_marginBottom="292dp"
        android:text="Start Activity Implicitly"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/openSecondExplicitBtn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/openSecondExplicitBtn"
        android:layout_width="368dp"
        android:layout_height="95dp"
        android:layout_marginBottom="412dp"
        android:text="Start Activity Explicitly"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Cyril Thomas Jones\nStudent ID: 1615494"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBroadcast"
        android:layout_width="368dp"
        android:layout_height="95dp"
        android:layout_marginEnd="28dp"
        android:text="Dispatch Broadcast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnService"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/btnService"
        android:layout_width="368dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        android:text="Activate Service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openSecondImplicitBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
